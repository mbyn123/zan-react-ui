{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": false,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react", // react18这里也可以改成react-jsx
    "baseUrl": ".",
    "paths": {
      "utils/*": ["utils/*"],
      "styles": ["styles/"],
      "examples": ["examples/"]
    }
  },
  "include": [ // 指定编译
    "example.tsx",
    "lib/**/*",
    "examples/**/*"
  ],
  "exclude": [// 忽略
    "node_modules",
    "dist",
    "webpack",
    "*.js"
  ]
}